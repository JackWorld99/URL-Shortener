<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <title>URL Shortener</title>
</head>

<body>
    <div class="wrapper">
        <form action="shortUrls" method="post">
            <input type="text" spellcheck="false" name="fullUrl" id="fullUrl" placeholder="Enter or paste a url"
                required>
            <i class="url-icon uil uil-link"></i>
            <button type="submit">Shorten</button>
        </form>
        <div class="statistics">
            <span>Total Links: <span>
                    <%= TotalLinks %>
                </span> & Total Clicks: <span>
                    <%= TotalClicks %>
                </span>
            </span>
            <a href="clearAll">Clear All</a>
        </div>
        <div class="urls-area">
            <div class="title">
                <li>Shorten URL</li>
                <li>Original URL</li>
                <li>Clicks</li>
                <li>Action</li>
            </div>
            <% shortUrls.forEach(shortUrl=> { %>
                <div class="data">
                    <li>
                        <a href="<%= shortUrl.full %>">
                            <%= shortUrl.full %>
                        </a>
                    </li>
                    <li>
                        <a href="directTo/<%= shortUrl.short %>">
                            <%= shortUrl.short %>
                        </a>
                    </li>
                    <li>
                        <%= shortUrl.clicks %>
                    </li>
                    <li>
                        <a href="delete/<%= shortUrl.id %>"><i class="uil uil-trash-alt"></i></a>
                    </li>
                </div>
                <% }); %>
        </div>
    </div>
</body>

</html>